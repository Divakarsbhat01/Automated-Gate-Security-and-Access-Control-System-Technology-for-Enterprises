<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context=".MainActivity">

    <Spinner
        android:id="@+id/spinC"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="49dp"
        android:layout_marginLeft="49dp"
        android:layout_marginTop="194dp"
        android:layout_marginEnd="61dp"
        android:layout_marginRight="61dp"
        android:autofillHints="[Select Class type...]"
        android:background="#80FFEB3B" />

    <Button
        android:id="@+id/btn_class"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/spinC"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="57dp"
        android:layout_marginLeft="57dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="54dp"
        android:layout_marginRight="54dp"
        android:backgroundTint="#80E91E63"
        android:text="Proceed to select Branch"
        android:textSize="15dp" />

    <Spinner
        android:id="@+id/spinB"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/btn_class"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="51dp"
        android:layout_marginLeft="51dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="59dp"
        android:layout_marginRight="59dp"
        android:autofillHints="[Select Class type...]"
        android:background="#80FFEB3B"
        android:visibility="invisible" />

    <Button
        android:id="@+id/btn_br"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/spinB"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="51dp"
        android:layout_marginLeft="51dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="58dp"
        android:layout_marginRight="58dp"
        android:backgroundTint="#80E91E63"
        android:text="GET BRANCH DATA"
        android:visibility="invisible" />

    <Spinner
        android:id="@+id/spinSec"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/btn_br"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="53dp"
        android:layout_marginLeft="53dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="56dp"
        android:layout_marginRight="56dp"
        android:layout_marginBottom="5sp"
        android:background="#80FFEB3B" />

    <Button
        android:id="@+id/btn_Sec"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/spinSec"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="56dp"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="54dp"
        android:layout_marginRight="54dp"
        android:backgroundTint="#80E91E63"
        android:text="Get section Data" />

    <Button
        android:id="@+id/reg_stu"
        android:layout_width="299dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_Sec"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="56dp"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="56dp"
        android:layout_marginRight="56dp"
        android:backgroundTint="#80E91E63"
        android:text="Register Student" />

    <TextView
        android:id="@+id/registe1"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/reg_stu"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="34dp"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="27dp"
        android:layout_marginRight="27dp"
        android:background="#80E91E63"
        android:gravity="center"
        android:text="ADMIN REGISTRATION"
        android:textColor="#F9FBF9"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/editTextTextPersonNamex"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="57dp"
        android:layout_marginRight="57dp"
        android:background="#80000000"
        android:ems="10"
        android:gravity="center"
        android:hint="Enter UID"
        android:inputType="textCapCharacters"
        android:textAlignment="center"
        android:textColor="#FAF6F6"
        android:textColorHint="#FDFDFD"
        android:textSize="20dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="59dp"
        android:layout_marginRight="59dp"
        android:backgroundTint="#80E91E63"
        android:text="GET DATA BY UID"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/editTextDate2"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="133dp"
        android:layout_marginEnd="206dp"
        android:layout_marginRight="206dp"
        android:background="#80000000"
        android:ems="10"
        android:gravity="center"
        android:hint="Date"
        android:textSize="15dp"
        android:inputType="date"
        android:textAlignment="center"
        android:textColor="#FAF6F6"

        android:textColorHint="#FDFDFD" />

    <Button
        android:id="@+id/button2"
        android:layout_width="125dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="132dp"
        android:layout_marginEnd="63dp"
        android:layout_marginRight="63dp"
        android:text="GET BY DATE"
        android:backgroundTint="#80E91E63"
        android:textSize="10dp" />

</RelativeLayout>